{
  "name": "VUU",
  "image": "mcr.microsoft.com/devcontainers/java:17",

  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "v18.17.0" }
  },

  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {},
      "extensions": ["Orta.vscode-jest", "dbaeumer.vscode-eslint"],
    }
  },

  "postCreateCommand": "chmod u+x ./.devcontainer/install-dependencies.sh && ./.devcontainer/install-dependencies.sh",

  "forwardPorts": [5173, 8443, 8090]
}
